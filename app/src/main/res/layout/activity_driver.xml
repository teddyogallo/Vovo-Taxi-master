<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parento"
    android:layout_height="match_parent"
    android:background="@drawable/insta"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_display_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp">


            <EditText
                android:id="@+id/firstname"
                android:layout_width="310dp"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:hint="First Name"


                android:inputType="textPersonName"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/blacko"

                android:textColorHint="@color/black_overla" />

        </android.support.design.widget.TextInputLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/regiser_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginTop="290dp">


            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:hint="Phone Number"

                android:inputType="phone"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/blacko"
                android:textColorHint="@color/black_overlay" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="370dp">


            <EditText
                android:id="@+id/numberplate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_edittext"

                android:ems="10"
                android:hint="Number Plate"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/blacko"
                android:textColorHint="@color/black_overlay" />

        </android.support.design.widget.TextInputLayout>


        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp">


            <EditText
                android:id="@+id/phone_auth_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:hint="Verification Code"
                android:inputType="phone"

                android:padding="5dp"
                android:text=""
                android:textColor="@color/blacko"
                android:textColorHint="@color/white"
                android:visibility="gone" />


        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/logina"

            android:layout_width="match_parent"
            android:layout_height="40.0dip"

            android:layout_above="@+id/loginas"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"

            android:layout_marginBottom="58dp"
            android:background="@drawable/bg_green"


            android:paddingLeft="90.0dip"
            android:paddingRight="90.0dip"
            android:text="SIGN UP"
            android:textColor="#ffffffff"
            android:visibility="gone" />

        <Button
            android:id="@+id/loginas"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:text="Login"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/success"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/roscoe" />



        <TextView
            android:id="@+id/timertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/reg_password"
            android:layout_alignEnd="@+id/register_email"
            android:text=""
            android:textColor="@color/blacko" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/register_display_name">

            <EditText
                android:id="@+id/secondname"
                android:layout_width="310dp"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:hint="Second Name"


                android:inputType="textPersonName"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/blacko"

                android:textColorHint="@color/black_overlay" />


        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/send_code"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:tag="@string/tag_send"
            app:srcCompat="@android:drawable/ic_menu_rotate" />
    </RelativeLayout>


</RelativeLayout>